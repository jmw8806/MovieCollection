                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="#FFFF94F8" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
