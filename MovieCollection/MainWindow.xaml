                            <ColumnDefinition Width="23*"/>
                            <ColumnDefinition Width="7*"/>
                            <ColumnDefinition Width="130"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="250"/>
                            <ColumnDefinition Width="15"/>
                            <ColumnDefinition Width="200"/>
                            <ColumnDefinition Width="30*"/>
                        </Grid.ColumnDefinitions>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition Height="50"/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Label Content="Filter" Grid.Column="2" HorizontalAlignment="Left" VerticalAlignment="Top" Grid.ColumnSpan="2" Grid.RowSpan="2" Margin="104,67,0,0"/>
                        <Label Content="Collection:" Grid.Row="1" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="5,0,0,0"/>
                        <CheckBox x:Name="chkSearchCollection" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="1" Grid.Column="2" Margin="114,0,0,0" />
                        <CheckBox x:Name="chkSearchTitle" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="2" Grid.Column="2" Margin="114,0,0,0" />
                        <Label Content="Title:" Grid.Row="2" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="53,0,0,0"/>
                        <Label Content="Year:" Grid.Row="3" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="54,0,0,0"/>
                        <CheckBox x:Name="chkSearchYear" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="3" Grid.Column="2" Margin="114,0,0,0" />
                        <Label Content="Genre:" Grid.Row="4" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="40,0,0,0"/>
                        <CheckBox x:Name="chkSearchGenre" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="4" Grid.Column="2" Margin="114,0,0,0" />
                        <Label Content="Language:" Grid.Row="5" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="8,0,0,0"/>
                        <CheckBox x:Name="chkSearchLanguage" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="5" Grid.Column="2" Margin="114,0,0,0" />
                        <Label Content="Runtime:" Grid.Row="6" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="18,0,0,0"/>
                        <CheckBox x:Name="chkSearchRuntime" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="6" Grid.Column="2" Margin="114,0,0,0" />
                        <Label Content="Criterion:" Grid.Row="7" Grid.Column="2" FontSize="18" FontWeight="Bold" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="16,0,0,0"/>
                        <CheckBox x:Name="chkSearchIncludeCriterion" HorizontalAlignment="Left" VerticalAlignment="Center" Grid.Row="7" Grid.Column="2" Margin="114,0,0,0" />
                        <ComboBox x:Name="cboSearchCollection" Grid.Column="3" Grid.Row="1" Width="180" Height="38" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,4,0,0" Padding="2"/>
                        <TextBox x:Name="txtSearchTitle" Grid.Column="3" Grid.Row="2" Width="180" Height="40" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,0,0" Padding="2"/>
                        <ComboBox x:Name="cboSearchYear" Grid.Column="3" Grid.Row="3" Width="180" Height="40" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,0,0" Padding="2"/>
                        <ComboBox x:Name="cboSearchGenre" Grid.Column="3" Grid.Row="4" Width="180" Height="40" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,0,0" Padding="2"/>
                        <ComboBox x:Name="cboSearchLanguage" Grid.Column="3" Grid.Row="5" Width="180" Height="40" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,0,0" Padding="2"/>
                        <RadioButton x:Name="radioSearchLessThan" Grid.Column="3" Content="&lt;=" FontSize="15" Grid.Row="6" Width="50" Height="40" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="10,0,0,0" />
                        <RadioButton x:Name="radioSearchGreaterThan" Grid.Column="3" Content="&gt;=" FontSize="15" Grid.Row="6" Width="50" Height="40" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="70,0,0,0" />
                        <TextBox x:Name="txtSearchRuntime" Grid.Column="3" Grid.Row="6" Width="75" Height="40" VerticalContentAlignment="Center" VerticalAlignment="Top" HorizontalAlignment="Right" Margin="0,3,0,0" Padding="2"/>
                        <Label Grid.Column="3" Grid.Row="7" Content="Yes" HorizontalAlignment="Left" VerticalAlignment="Center" Margin="10,0,0,0"/>
                        <CheckBox x:Name="chkSearchCriterion" Grid.Column="3" Grid.Row="7" Width="50" Height="40" VerticalAlignment="Center" VerticalContentAlignment="Center" HorizontalAlignment="Left" Margin="35,0,0,0" />
                        <Button x:Name="btnSearchSubmit" Content="Search" FontSize="18" Grid.Column="3" Grid.Row="7" Width="100" Height="40" HorizontalAlignment="Right" VerticalAlignment="Top" VerticalContentAlignment="Center" Click="btnSearchSubmit_Click" Background="#FFFFC0FF" BorderBrush="#FF832A7D"/>
                        <ListBox x:Name="lstSearchResults" Grid.Column="5" Grid.Row="1" Grid.RowSpan="7" MouseDoubleClick="lstSearchResults_MouseDoubleClick" />
                        <Image x:Name="imgSearch" Grid.Row="1" Grid.Column="7" Grid.RowSpan="7" Width="245" Height="350" Margin="2,0,2,0"/>
                        <TextBlock x:Name="txtResultTitle" Grid.Row="1" Grid.Column="9" Text="Title" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" TextWrapping="Wrap"/>
                        <TextBlock x:Name="txtResultYear" Grid.Row="2" Grid.Column="9" Text="Year" FontSize="16" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtResultRating" Grid.Row="2" Grid.Column="9" Text="Rating" FontSize="16" HorizontalAlignment="Right" VerticalAlignment="Center"/>
                        <TextBlock x:Name="txtResultFormats" Grid.Row="3" Grid.Column="9" Text="Formats" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtResultLanguages" Grid.Row="4" Grid.Column="9" Text="Languages" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtResultGenres" Grid.Row="5" Grid.Column="9" Text="Genres" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtResultRuntime" Grid.Row="6" Grid.Column="9" Text="Runtime" FontSize="18" HorizontalAlignment="Left" VerticalAlignment="Center" />
                        <TextBlock x:Name="txtResultCriterion" Grid.Row="6" Grid.Column="9" Text="Criterion: " FontSize="18" HorizontalAlignment="Right" VerticalAlignment="Center" Margin="0,0,0,0" />
                        <Button x:Name="btnResultEdit" Content="Edit" FontSize="18" Grid.Column="9" Grid.Row="7" Width="85" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Margin="105,0,0,0" Click="btnResultEdit_Click" Background="#FFDAF7FF" BorderBrush="#FF475FFD"/>
                        <Button x:Name="btnResultRemove" Content="Remove" FontSize="18" Grid.Column="9" Grid.Row="7" Width="85" Height="40" HorizontalAlignment="Left" VerticalAlignment="Center" VerticalContentAlignment="Center" Click="btnResultRemove_Click" Background="#FFFFC8C8" BorderBrush="#FFF16C6C" />
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabAll" Header="All" GotFocus="tabAll_GotFocus">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="#FFFFDCA9" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid Height="500" Width="1200">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="#FFF4E8D7" Offset="0.039"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                            <RowDefinition Height="Auto"/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="50"/>
                            <ColumnDefinition Width="250" />
                            <ColumnDefinition Width="385"/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <ListBox x:Name="lstAllMovies" Grid.Row="1" Grid.RowSpan="9" Grid.Column="1" MouseDoubleClick="lstAllMovies_MouseDoubleClick"/>

                        <Image x:Name="imgAllMoviesImage"  Grid.Row="1" Grid.RowSpan="8" Grid.Column="3" Width="300" Height="352" HorizontalAlignment="Center" VerticalAlignment="Top" Margin="0 0 0 10"/>
                        <TextBlock x:Name="lblAllMoviesTitle" Grid.Row="1" Grid.Column="4" Text="Title" FontWeight="Bold" FontSize="20" TextWrapping="Wrap"
                                   Margin="5 0 0 0"/>
                        <Label x:Name="lblAllMoviesYear" Grid.Row="2" Grid.Column="4" Content="Year"  FontSize="20" />
                        <Label x:Name="lblAllMoviesRating" Grid.Row="3" Grid.Column="4" Content="Rating"  FontSize="20" />
                        <Label x:Name="lblAllMoviesFormats" Grid.Row="4" Grid.Column="4" Content="Formats"  FontSize="20" />
                        <Label x:Name="lblAllMoviesGenres" Grid.Row="5" Grid.Column="4" Content="Genres"  FontSize="20" />
                        <Label x:Name="lblAllMoviesLanguages" Grid.Row="6" Grid.Column="4" Content="Languages"  FontSize="20" />
                        <Label x:Name="lblAllMoviesRuntime" Grid.Row="7" Grid.Column="4" Content="Runtime: mins"  FontSize="20" />
                        <Label x:Name="lblAllMoviesCriterion" Grid.Row="8" Grid.Column="4" Content="Criterion: "  FontSize="20" />
                        <Button x:Name="btnAllAdd" Content="Add" Grid.Row="9" Grid.Column="4" Width="100" Height="35" HorizontalAlignment="Left" Margin="0 0 10 0" Click="btnAllAdd_Click" Background="#FFC1F6C1" BorderBrush="#FF18FF27"/>
                        <Button x:Name="btnAllEdit" Content="Edit" Grid.Row="9" Grid.Column="4" Width="100" Height="35" HorizontalAlignment="Center" Click="btnAllEdit_Click" Background="#FFDAF7FF" BorderBrush="#FF475FFD"/>
                        <Button x:Name="btnAllRemove" Content="Remove" Grid.Row="9" Grid.Column="4" Width="100" Height="35" HorizontalAlignment="Right" Click="btnAllRemove_Click" Background="#FFFFC8C8" BorderBrush="#FFF16C6C"/>
                    </Grid>
                </TabItem>
                <TabItem x:Name="tabCollections" Header="Collections">
                    <Label Content="Collections"/>
                </TabItem>
                <TabItem x:Name="tabAdd" Header="Add">
                    <TabItem.Background>
                        <LinearGradientBrush EndPoint="0,1">
                            <GradientStop Color="#FFF0F0F0"/>
                            <GradientStop Color="#FF86F191" Offset="1"/>
                        </LinearGradientBrush>
                    </TabItem.Background>
                    <Grid Height="450" Width="1150">
                        <Grid.Background>
                            <LinearGradientBrush EndPoint="0.5,1" StartPoint="0.5,0">
                                <GradientStop Color="White"/>
                                <GradientStop Color="#FFCCFAD0" Offset="0.039"/>
                            </LinearGradientBrush>
                        </Grid.Background>
                        <Grid.RowDefinitions>
                            <RowDefinition Height="75"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="40"/>
                            <RowDefinition Height="80"/>
                            <RowDefinition />
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition Width="4.6"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="90"/>
                            <ColumnDefinition Width="300"/>
                            <ColumnDefinition Width="75"/>
                            <ColumnDefinition Width="300"/>
                        </Grid.ColumnDefinitions>


                        <Image x:Name="imgAddImage" Grid.Row="1" Grid.Column="2" Width="200" Height="260" Grid.RowSpan="7" />
                        <TextBox x:Name="txtAddURL" VerticalContentAlignment="Center" Grid.Row="7" Grid.Column="4" Margin="3,3,20,5"/>
                        <Label Content="Image URl:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="7" Grid.Column="3" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
                        <Button x:Name="btnAddMovieImage" Content="Preview Image"  Grid.Row="8"  Grid.Column="4"  HorizontalAlignment="Right" VerticalAlignment="Center" Width="125" Height="35" 
                                 Click="btnAddMovieImage_Click" Background="#FFEED2FF" BorderBrush="#FFA23DFF" Margin="3 3 20 5"/>
                        <Label Content="Name:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="2" Grid.Column="3" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
                        <Label Content="Year:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="3" Grid.Column="3" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
                        <Label Content="Runtime" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="4" Grid.Column="3" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
                        <Label Content="Language:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="5" Grid.Column="3" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
                        <Label Content="Genre:" HorizontalAlignment="Right" VerticalAlignment="Top" Grid.Row="2" Grid.Column="5" FontSize="12" FontWeight="Bold" Margin="0 3 5 0"/>
